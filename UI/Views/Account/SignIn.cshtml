@model AppUserLoginDto

@{
    ViewData["Title"] = "SignIn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

            <nav class="breadcrumb-nav">
                <div class="container">
                    <ul class="breadcrumb">
                        <li><a href="demo1.html"><i class="d-icon-home"></i></a></li>
                        <li><a asp-controller="Home" asp-action="Index">Düzce Üniversitesi</a></li>
                        <li>Giriş Yap</li>
                    </ul>
                </div>
            </nav>
            <div class="page-content mt-6 pb-2 mb-10">
                <div class="container">
                    <div class="login-popup">
                        <div class="form-box">
                            <div class="tab tab-nav-simple tab-nav-boxed form-tab">
                                <ul class="nav nav-tabs nav-fill align-items-center border-no justify-content-center mb-5"
                                    role="tablist">
                                    <li class="nav-item">
                                        <a class="nav-link active border-no lh-1 ls-normal" href="#signin">Giriş Yap</a>
                                    </li>
                                </ul>
                                <div class="tab-content">
                                    <div class="tab-pane active" id="signin">
                                        <form asp-action="SignIn" method="post">
                                            <div class="form-group mb-3">
                                                <input type="text" class="form-control" id="singin-email"
                                                    asp-for="@Model.UserName" placeholder="Kullanıcı Adı *"
                                                    required />
                                            </div>
                                            <div class="form-group">
                                                <input type="password" class="form-control" id="singin-password"
                                                    asp-for="@Model.Password" placeholder="Parola *" required />
                                            </div>
                                            <div class="form-footer">
                                                <div class="form-checkbox">
                                                    <input type="checkbox" class="custom-checkbox" id="signin-remember"
                                                        name="signin-remember" />
                                                    <label class="form-control-label" for="signin-remember">Beni Hatırla</label>
                                                </div>
                                                <a href="#" class="lost-link">Parolamı Unuttum</a>
                                            </div>
                                            <button class="btn btn-dark btn-block btn-rounded"
                                                type="submit">Giriş Yap</button>
                                        </form>
                                        <div class="form-choice text-center">
                                            <label class="ls-m">or Login With</label>
                                            <div class="social-links">
                                                <a href="#"
                                                    class="social-link social-google fab fa-google border-no"></a>
                                                <a href="#"
                                                    class="social-link social-facebook fab fa-facebook-f border-no"></a>
                                                <a href="#"
                                                    class="social-link social-twitter fab fa-twitter border-no"></a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
